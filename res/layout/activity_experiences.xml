<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp">

    <ListView android:id="@android:id/list"
         android:layout_width="fill_parent" android:layout_height="wrap_content" />
    
	
	    <TextView android:id="@+id/experienceId" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"/>
			
	    <LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView android:id="@+id/fromdateText" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView android:id="@+id/fromdate" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView android:id="@+id/overateText" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView android:id="@+id/overate" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView android:id="@+id/companyText" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView android:id="@+id/company" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView android:id="@+id/occupationText" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView android:id="@+id/occupation" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">

			<TextView android:id="@+id/describtionText" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView android:id="@+id/describtion" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	    
</LinearLayout>